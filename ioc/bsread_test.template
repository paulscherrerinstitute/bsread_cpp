# Macros
# P  -  Record prefix, e.g. TEST-BSREAD


record(calc, "$(P):TEST_1") {
	field(VAL,"0")
	field(INPA,"$(P):TEST_1")
	field(CALC,"A+1")
	field(SCAN,".1 second")
}

